<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- 纵向linnerlayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0094de"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/qm_top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            app:qmui_topbar_bg_color="#0094de"
            app:qmui_topbar_left_back_drawable_id="@mipmap/ic_return"
            app:qmui_topbar_title_color="#fff"
            app:qmui_topbar_title_gravity="center"
            app:qmui_topbar_title_text_size="19sp" />

        <!-- 纵向linnerlayout -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="351dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@drawable/shape_confirm_order"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="微信扫一扫，马上加入"
                android:textColor="#333"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_btn_commit"
                android:gravity="center"
                android:text="保存二维码"
                android:textColor="#fff"
                android:textSize="15dp" />


        </LinearLayout>


    </LinearLayout>


</layout>