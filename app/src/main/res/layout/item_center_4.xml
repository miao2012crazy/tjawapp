<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.zysoft.tjawshapingapp.bean.CenterToolBean" />
        <variable
            name="handler"
            type="com.zysoft.tjawshapingapp.handler.CustomHandlerEvent"/>
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_drawable"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            app:imageUrlLocal="@{item.tag_drawable}" />

        <TextView
            android:id="@+id/tv_tag_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            tools:text="123123123"
            android:textColor="#fff"
            android:textSize="12sp" />

    </LinearLayout>


</layout>