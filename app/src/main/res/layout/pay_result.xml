<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="25dp"
        android:background="#fff"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/layout_title_bar" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="正在支付..."
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/icon_success" />

            <ImageView
                android:id="@+id/iv_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/icon_pay_fail" />
            <!-- 纵向linnerlayout -->
            <Button
                android:id="@+id/btn_return_home"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="16dp"
                android:background="@mipmap/ic_btn_bg"
                android:text="返回首页"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_finish_page"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="16dp"
                android:background="@mipmap/ic_btn_bg"
                android:text="充值成功"
                android:textColor="#fff"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_pay_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_strock_2"
                    android:text="上一页"
                    android:textColor="#0086c9"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_repay"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_commit"
                    android:text="重新支付"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</layout>