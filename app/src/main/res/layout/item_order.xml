<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.zysoft.tjawshapingapp.bean.OrderBean" />
        <import type="android.view.View"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_confirm_order"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_confirm_order"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--app:loadImgRound="@{item.productIcon}" -->
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="13dp"
                    android:background="@mipmap/sample_recommend_1"
                    app:loadImgRound="@{item.projectIcon}" />
                <!--                            android:text="@{String.valueOf(item.projectTag)+String.valueOf(item.projectName)}"
-->
                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lines="3"
                    android:text="【假体隆鼻】3S精雕美鼻 打造东方女性鼻尖鼻根唇角3S精致鼻形美丽动人"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="数量"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{String.valueOf(item.projectNum)+String.valueOf('件')}"
                    android:textColor="#a9a9a9"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="346dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="预约时间"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{item.expectTime}"
                    android:textColor="#a9a9a9"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="预付款(余款到店付)"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_conpoun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{String.valueOf('¥')+String.valueOf(item.orderPayPrice)}"
                    android:textColor="#ff758c"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@{item.orderStateName}"
                    android:textColor="#ff758c"
                    android:textSize="14sp" />

                <Button
                    android:visibility="@{item.orderState==0?View.VISIBLE:View.GONE}"
                    android:id="@+id/btn_cancel"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_btn_strock"
                    android:text="取消订单"
                    android:textColor="#ff758c"
                    android:textSize="12sp" />

                <Button
                    android:visibility="@{item.orderState==0?View.VISIBLE:View.GONE}"

                    android:id="@+id/btn_pay"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_btn_commit"
                    android:text="马上支付"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:visibility="@{item.orderState==3?View.VISIBLE:View.GONE}"

                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_btn_commit"
                    android:text="我要评价"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <Button
                    android:layout_marginEnd="10dp"

                    android:visibility="@{item.orderState==7?View.VISIBLE:View.GONE}"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_btn_strock"
                    android:text="查看物流"
                    android:textColor="#ff758c"
                    android:textSize="12sp" />
                <Button
                    android:layout_marginEnd="10dp"

                    android:visibility="@{item.orderState==6?View.VISIBLE:View.GONE}"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_btn_strock"
                    android:text="查看物流"
                    android:textColor="#ff758c"
                    android:textSize="12sp" />
                <Button
                    android:layout_marginEnd="10dp"

                    android:visibility="@{item.orderState==5?View.VISIBLE:View.GONE}"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_btn_strock"
                    android:text="查看物流"
                    android:textColor="#ff758c"
                    android:textSize="12sp" />

                <Button
                    android:visibility="@{item.orderState==7?View.VISIBLE:View.GONE}"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_btn_commit"
                    android:text="确认收货"
                    android:textColor="#fff"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</layout>